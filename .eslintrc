{
    "root": true,
    "env": {
        "node": true,
        "browser": true
    },
    "ignorePatterns": ["types/supabase.ts"],
    "extends": [
        "@nuxt/eslint-config"
    ],
    "rules": {
        "semi": "error",
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 1
            }
        ],
        "brace-style": [
            "error",
            "1tbs"
        ],
        "eol-last": [
            "error",
            "always"
        ],
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "no-trailing-spaces": "error",
        "padded-blocks": [
            "error",
            {
                "classes": "never"
            }
        ],
        "vue/html-indent": [
            "error",
            4
        ],
        "vue/no-multiple-template-root": "off"
    }
}
